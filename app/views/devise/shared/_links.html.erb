<div class="d-flex flex-column gap-2">

  <%# ログインリンク（サインアップ画面などで表示） %>
  <% if controller_name != 'sessions' %>
    <%= link_to "登録済みの方はこちら（ログイン）", new_session_path(resource_name), class: "btn btn-outline-primary w-100" %>
  <% end %>

  <%# 新規会員登録リンク（ログイン画面などで表示） %>
  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "新規会員登録", new_registration_path(resource_name), class: "btn btn-success w-100" %>
  <% end %>

</div>
