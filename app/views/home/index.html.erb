<div class="min-h-screen bg-gray-50 flex flex-col items-center justify-center">
  <h1 class="text-4xl font-bold text-blue-600 mb-4">LiftLog</h1>
  <p class="text-gray-700 mb-6">Tailwind + Hotwire が動作中です 🎉</p>

  <div data-controller="hello">
    <span data-hello-target="output" class="text-green-500"></span>
  </div>

  <%= form_with url: root_path, method: :post, data: { turbo: true } do |f| %>
    <%= f.text_field :message, placeholder: "Turbo test", class: "border p-2 rounded" %>
    <%= f.submit "送信", class: "ml-2 bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
  <% end %>
</div>
