<header class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
  <div class="container-fluid">
    <!-- ロゴ -->
    <%= link_to root_path, class: "navbar-brand" do %>
      <strong class="text-primary">LiftLog</strong>
    <% end %>
    
    <!-- ナビゲーションボタン群 -->
    <div class="d-flex flex-wrap gap-2">
      <% if user_signed_in? %>
        <%= link_to "TOP", root_path, class: "btn btn-sm btn-outline-primary" %>
        <%= link_to "レポート", "#", class: "btn btn-sm btn-outline-primary" %>
        <%= link_to "種目", "#", class: "btn btn-sm btn-outline-primary" %>
        <%= link_to "設定", edit_user_registration_path, class: "btn btn-sm btn-outline-secondary" %>
        <%= link_to "ログアウト", destroy_user_session_path,
                      data: { turbo_method: :delete, turbo_confirm: "ログアウトしますか？" },
                      class: "btn btn-sm btn-outline-danger" %>
      <% else %>
        <%= link_to "新規会員登録", new_user_registration_path, class: "btn btn-outline-primary" %>
        <%= link_to "ログイン", new_user_session_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</header>
